@page "/tournaments/{id:guid}"
@if (Tournament != null)
{
    <MudGrid>
        <MudItem xs="6">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">ОБЩАЯ ИНФОРМАЦИЯ</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Статус: @Tournament.Status</MudText>
                    <MudText Typo="Typo.subtitle1">Формат: Online</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="6">
            <MudCard>
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudText Typo="Typo.h6">РЕГИСТРАЦИЯ И УЧАСТИЕ</MudText>
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent>
                    <MudText Typo="Typo.subtitle1">Регистрация открыта: до @Tournament.RegistrationEnd.ToString("f")</MudText>
                    <MudText Typo="Typo.subtitle1">
                        Число команд: @Tournament.CurrentParticipantsNumber из @Tournament.MaxParticipantsNumber
                    </MudText>
                    <MudText Typo="Typo.subtitle1">Формат участия: 5x5</MudText>
                </MudCardContent>
                <MudCardActions>
                    <MudButton Variant="Variant.Filled" OnClick="JoinTournamentAsync">
                        Участвовать
                    </MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
        <MudItem xs="12">
            <MudDivider/>
        </MudItem>
        <MudItem xs="12">
            <MudTabs Centered="@true" Rounded="@true" Color="Color.Primary">
                <MudTabPanel Text="Участники">
                    
                </MudTabPanel>
                <MudTabPanel Text="Результаты"></MudTabPanel>
            </MudTabs>
        </MudItem>
    </MudGrid>
}