@page "/tournaments"
@attribute [Authorize]
<MudGrid>
    @foreach (var tournament in Tournaments)
    {
        <MudItem lg="6">
            <MudCard>
                @{
                    var link = $"/tournaments/{tournament.Id}";
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudLink Href="@link">@tournament.Title</MudLink>
                        </CardHeaderContent>
                    </MudCardHeader>
                }
                <MudCardContent>
                    <MudText Typo="Typo.body1">
                        Организатор:
                    </MudText>
                    @{
                        var str = $"Регистрация: {tournament.RegistrationStart:f} - {tournament.RegistrationEnd:f}";
                        <MudText Typo="Typo.body1">@str</MudText>
                    }
                </MudCardContent>
            </MudCard>
        </MudItem>
    }
</MudGrid>