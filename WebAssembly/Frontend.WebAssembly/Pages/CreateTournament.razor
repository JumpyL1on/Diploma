@page "/create-tournament"
@attribute [Authorize]
<EditForm Model="Request" OnValidSubmit="CreateTournamentAsync">
    <MudCard>
        <MudCardContent>
            <MudGrid>
                <MudItem xs="12">
                    <MudTextField Label="Название*" @bind-Value="Request.Title" For="() => Request.Title"></MudTextField>
                </MudItem>
                <MudItem xs="12">
                    <MudDateRangePicker @bind-DateRange="RegistrationDateRange"
                                        Label="Дата регистрации"
                                        Required="@true"
                                        RequiredError="Дата регистрации обязательная для заполнения"
                                        MinDate="DateTime.Today"></MudDateRangePicker>
                </MudItem>
                <MudItem xs="12">
                    <MudDateRangePicker @bind-DateRange="DateRange"
                                        Label="Дата проведения"
                                        Required="@true"
                                        RequiredError="Дата проведения обязательна для заполнения"
                                        MinDate="@(RegistrationDateRange.End?.AddDays(1))"></MudDateRangePicker>
                </MudItem>
                <MudItem xs="12">
                    <MudSelect Label="Число участников"
                               T="@byte"
                               @bind-Value="Request.ParticipantsNumber"
                               Required="@true">
                        <MudSelectItem T="@byte" Value="@(4)"></MudSelectItem>
                        <MudSelectItem T="@byte" Value="@(8)"></MudSelectItem>
                    </MudSelect>
                </MudItem>
                <MudItem xs="12">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" Style="width: 100%">
                        Организовать турнир
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</EditForm>