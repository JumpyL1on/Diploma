@using Microsoft.AspNetCore.Components
<MudDialog>
    <DialogContent>
        <EditForm Model="Request" OnValidSubmit="OnValidSubmitAsync">
            <MudCard>
                <MudCardContent>
                    <MudGrid>
                        <MudItem xs="12">
                            <MudTextField Label="Название*" Variant="Variant.Outlined" @bind-Value="Request.Title" For="() => Request.Title"/>
                        </MudItem>
                        <MudItem xs="12">
                            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Medium" Style="width: 100%">
                                Создать команду
                            </MudButton>
                        </MudItem>
                    </MudGrid>
                </MudCardContent>
            </MudCard>
        </EditForm>
    </DialogContent>
</MudDialog>