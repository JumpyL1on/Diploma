<MudTabs Position="Position.Left">
    @if (CurrentTournament != null)
    {
        var i = CurrentTournament.MaxParticipantsNumber;
        @foreach (var group in CurrentTournament.Matches
            .OrderBy(x => x.Order)
            .GroupBy(x => x.Order))
        {
            var text = i switch
            {
                4 => "Полуфинал",
                2 => "Финал",
                _ => $"1/{i / 2}"
                };
            <MudTabPanel Text="@text">
                <MudTimeline Style="width: 100%">
                    @foreach (var e in group.OrderBy(x => x.Position))
                    {
                        <MudTimelineItem Size="Size.Large">
                            <ItemOpposite>@(e.ParticipantA != null ? e.ParticipantA.TeamTitle : "TBA")</ItemOpposite>
                            <ItemDot>@($"{e.ParticipantAScore} : {e.ParticipantBScore}")</ItemDot>
                            <ItemContent>@(e.ParticipantA != null ? e.ParticipantB.TeamTitle : "TBA")</ItemContent>
                        </MudTimelineItem>
                    }
                </MudTimeline>
            </MudTabPanel>
            i /= 2;
        }
    }
</MudTabs>