@page "/sign-in"
@attribute [AllowAnonymous]
<EditForm Model="@_request" OnValidSubmit="OnValidSubmitAsync">
    <MudCard Class="ma-auto" Style="width: 30%">
        <MudCardContent>
            <MudGrid>
                <DataAnnotationsValidator/>
                <MudItem xs="12">
                    <MudText Align="Align.Center" Typo="Typo.h4">
                        ВОЙТИ
                    </MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudText Align="Align.Center">
                        Нет аккаунта? <MudLink Href="/sign-up">Зарегистрироваться здесь</MudLink>
                    </MudText>
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Ваш e-mail"
                                  Variant="Variant.Outlined"
                                  @bind-Value="_request.Email"
                                  For="() => _request.Email" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField Label="Пароль"
                                  Variant="Variant.Outlined"
                                  @bind-Value="_request.Password"
                                  For="() => _request.Password"
                                  InputType="InputType"
                                  Adornment="Adornment.End"
                                  AdornmentIcon="@InputIcon"
                                  OnAdornmentClick="Toggle" />
                </MudItem>
                <MudItem xs="12">
                    <MudLink Href="/reset-password">Забыли пароль?</MudLink>
                </MudItem>
                <MudItem xs="12">
                    <MudButton ButtonType="ButtonType.Submit"
                               Variant="Variant.Filled"
                               Color="Color.Primary"
                               Size="Size.Large"
                               FullWidth="@true">
                        Войти с адресом email
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</EditForm>