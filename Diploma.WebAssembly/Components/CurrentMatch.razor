@page "/matches/current"
@attribute [Authorize]
@if (match == null)
{
    <MudText>У вас пока нет матчей</MudText>
}
else
{
    <MudTabs ActivePanelIndex="1">
        <MudTabPanel Text="@match.TournamentTitle" OnClick="BackToTournament">
        </MudTabPanel>
        <MudTabPanel Text="МАТЧ">
            <MudGrid>
                <MudItem xs="4">
                    @foreach (var teamMember in match.ParticipantA.TeamMembers)
                    {
                        <MudCard>
                            <MudCardContent>
                                <MudText>@teamMember.FullName</MudText>
                                <MudText>@teamMember.Role</MudText>
                            </MudCardContent>
                        </MudCard>
                    }
                </MudItem>
                <MudItem xs="4">
                    asad
                </MudItem>
                <MudItem xs="4">
                    @foreach (var teamMember in match.ParticipantB.TeamMembers)
                    {
                        <MudCard>
                            <MudCardContent>
                                <MudText>@teamMember.FullName</MudText>
                                <MudText>@teamMember.Role</MudText>
                            </MudCardContent>
                        </MudCard>
                    }
                </MudItem>
            </MudGrid>
        </MudTabPanel>
    </MudTabs>
}