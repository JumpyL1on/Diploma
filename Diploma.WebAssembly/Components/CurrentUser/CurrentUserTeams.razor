@using Diploma.Common.DTOs
@if (_teams != null && _teams.Count == 0)
{
    <MudText Typo="Typo.h5" Class="mt-6">
        Мои команды
    </MudText>
    <MudCard Class="mt-6">
        <MudCardContent Class="d-flex justify-center">
            <MudText>Создайте свою первую команду</MudText>
        </MudCardContent>
        <MudCardActions Class="justify-center">
            <MudButton Variant="Variant.Filled" OnClick="OnClickAsync">
                <MudStack Row="@true">
                    <MudIcon Icon="@Icons.Material.Filled.Add"/>
                    <MudText Typo="Typo.body1">Создать команду</MudText>
                </MudStack>
            </MudButton>
        </MudCardActions>
    </MudCard>
}
@if (_teams != null && _teams.Count != 0)
{
    <MudText Typo="Typo.h6" Class="mt-6">
        Мои команды
    </MudText>
    <MudTable Items="_teams" T="TeamDTO" Class="mt-6">
        <HeaderContent>
            <MudTh>Команда</MudTh>
            <MudTh>Игра</MudTh>
            <MudTh>Количество игроков</MudTh>
            <MudTh>Роль</MudTh>
            <MudTh/>
        </HeaderContent>
        <RowTemplate>
            <MudTd>
                <MudLink Href="@($"/team/{@context.Id}")">
                    @context.Title
                </MudLink>
            </MudTd>
            <MudTd>
                <MudStack Row="@true">
                    <MudIcon Icon="@Icons.Custom.Brands.Steam"/>
                    <MudText Typo="Typo.body1">@context.GameTitle</MudText>
                </MudStack>
            </MudTd>
            <MudTd>5</MudTd>
            <MudTd>@context.Role</MudTd>
            <MudTd Class="d-flex justify-end">
                @if (context.Role == "Капитан")
                {
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">
                        <MudText Typo="Typo.body1">Удалить команду</MudText>
                    </MudButton>
                }
                @if (context.Role == "Игрок")
                {
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">
                        <MudText Typo="Typo.body1">Покинуть состав</MudText>
                    </MudButton>
                }
            </MudTd>
        </RowTemplate>
    </MudTable>
}