@using Microsoft.AspNetCore.Components
<MudDialog>
    <DialogContent>
        <MudForm @ref="@_form">
            <MudStack>
                <MudTextField Label="Название команды*"
                              @bind-Value="_request.Title"
                              Placeholder="Введите название"
                              Validation="@((string title) => TeamValidationService.ValidateTitle(title))"/>
                <MudSelect Class="mt-6" Placeholder="Выберите игру" Label="Игра*" @bind-Value="_request.Game">
                    <MudSelectItem Value="@("DOTA 2")">
                        <MudStack Row="@true">
                            <MudIcon Icon="@Icons.Custom.Brands.Steam"/>
                            <MudText>DOTA 2</MudText>
                        </MudStack>
                    </MudSelectItem>
                </MudSelect>
                <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="OnClickAsync" Class="mt-6">
                    Создать команду
                </MudButton>
            </MudStack>
        </MudForm>
    </DialogContent>
</MudDialog>