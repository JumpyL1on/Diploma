@{
    if (Team != null)
    {
        <MudCard Class="ma-auto" Style="width: 60%">
            <MudCardHeader>
                <MudText Typo="Typo.h6">@Team.Title</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudSimpleTable Style="overflow-x: auto">
                    <thead>
                    <tr>
                        <th>Полное имя</th>
                        <th>Роль</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var teamMember in Team.TeamMembers)
                    {
                        <tr>
                            <td>@teamMember.FullName</td>
                            <td>@teamMember.Role</td>
                        </tr>
                    }
                    </tbody>
                </MudSimpleTable>
                <MudDivider></MudDivider>
                <MudCard>
                    <AuthorizeView Policy="Owner">
                        @{
                            var link = $"https://localhost:39602/team/{Team.Id}/join";
                            <MudCardHeader>Ссылка для приглашения в команду</MudCardHeader>
                            <MudCardContent>@link</MudCardContent>
                        }
                    </AuthorizeView>
                </MudCard>
            </MudCardContent>
            <MudCardActions>
                <AuthorizeView Policy="Owner">
                    <MudButton StartIcon="@Icons.Material.Filled.DeleteForever"
                               Variant="Variant.Filled"
                               FullWidth="@true"
                               OnClick="OnClickAsync">
                        Удалить команду
                    </MudButton>
                </AuthorizeView>
                <AuthorizeView Policy="Participant">
                    <MudButton StartIcon="@Icons.Material.Filled.TimeToLeave"
                               Variant="Variant.Filled"
                               FullWidth="@true"
                               OnClick="OnLeaveAsync">
                        Покинуть команду
                    </MudButton>
                </AuthorizeView>
            </MudCardActions>
        </MudCard>
    }
    else
    {
        <MudText Typo="Typo.body1">
            Сообщите другим, что вы ищете команду, или
            <MudButton @onclick="OpenDialog" Variant="Variant.Text" Color="Color.Primary">
                создайте
            </MudButton> собственную команду.
        </MudText>
    }
}