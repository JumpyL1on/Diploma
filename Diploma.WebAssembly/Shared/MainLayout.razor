@inherits LayoutComponentBase
<MudSnackbarProvider/>
<MudDialogProvider CloseButton="@true"
                   MaxWidth="MaxWidth.Small"
                   FullWidth="@true"
                   Position="DialogPosition.TopCenter"/>
<MudThemeProvider/>
<MudLayout>
    <AuthorizeView>
        <Authorized>
            <MudAppBar Color="Color.Surface" Class="px-16">
                <MudLink Color="Color.Default" Href="/" Class="pl-11">
                    <MudText Typo="Typo.body1">
                        ГЛАВНАЯ
                    </MudText>
                </MudLink>
                <MudSpacer/>
                <MudLink Color="Color.Default" Href="/user/profile" Class="pr-2">
                    <MudText Typo="Typo.body1">
                        ПРОФИЛЬ
                    </MudText>
                </MudLink>
                <MudLink Color="Color.Default" Href="/user/sign-out" Class="pr-11">
                    <MudText Typo="Typo.body1">
                        ВЫЙТИ
                    </MudText>
                </MudLink>
            </MudAppBar>
        </Authorized>
    </AuthorizeView>
    <MudMainContent>
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>